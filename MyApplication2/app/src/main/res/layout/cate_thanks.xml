<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/border">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_logo"
            android:layout_gravity="center"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/cate_thanks_top"
            android:layout_gravity="center"
            android:layout_weight="12"/>
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1">
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="280dp"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_weight="1">
            <Button
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="15dp"
                android:background="@drawable/cate_thanks_1"/>

            <LinearLayout
                android:layout_width="163dp"
                android:layout_height="52dp"
                android:layout_marginTop="192dp"
                android:layout_marginLeft="23dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="친절에 감사해요"
                    android:textSize="24dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="3dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/font_hana"/>
            </LinearLayout>


        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="15dp"
                android:background="@drawable/cate_thanks_2"/>

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="68dp"
                android:layout_marginTop="178dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="당신의 친절에 감사해요"
                    android:textSize="20dp"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="11dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/font_hana"/>
            </LinearLayout>


        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="280dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="15dp"
                android:background="@drawable/cate_thanks_3"/>

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_marginTop="195dp"
                android:layout_marginLeft="45dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="감사합니다"
                    android:textSize="24dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/font_hana"/>
            </LinearLayout>


        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_weight="1"
            android:gravity="center">
            <Button
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="15dp"
                android:background="@drawable/cate_thanks_4"/>

            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_marginTop="195dp"
                android:layout_marginLeft="48dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="감사합니다"
                    android:textSize="24dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/font_hana"/>
            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</LinearLayout>